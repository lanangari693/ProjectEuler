{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "C/C++: g++ build active file",
        "type": "cppbuild",
        "command": "/usr/bin/g++",
        "args": [
          "-std=c++17",
          "-fdiagnostics-color=always",
          "-g",
          "${fileDirname}/main.cpp",
          "${fileDirname}/answer.cpp",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}",
          "-lm"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      }
    ]
  }
  